<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:SaveUpUpd.ViewModel;assembly=SaveUpUpd"
             BackgroundColor="#212121"
             x:Class="SaveUpUpd.View.LanguagePage"
             NavigationPage.HasBackButton="False">
    <ContentPage.BindingContext>
        <viewModel:LanguagePageVM/>
    </ContentPage.BindingContext>

    <StackLayout>
        <Label Text="Please select a language" Style="{StaticResource Title}"></Label>

        <ImageButton Source="DE.png" Command="{Binding germanbutton}"/>

        <ImageButton Source="EN.jpg" Command="{Binding englishbutton}"/>
    </StackLayout>
</ContentPage>